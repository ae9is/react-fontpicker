{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // @tsconfig/recommended
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2015",

    // extra
    "declarationDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist",
    "tsBuildInfoFile": ".tsbuildinfo",
  },
  "include": [
    "index.ts",
    "src/components/FontPicker.tsx",
    "src/components/FontPreviews.tsx",
    "src/lib",
    "font-preview/**/*.json",
    ".eslintrc.js",
  ],
  "exclude": [],
}
